
{
  "include": ["./src/**/*"],
  "exclude": [
    "./sbv2-aptos.ts",
    "tests/**/*",
    "lib",
    "node_modules",
    "scripts"
  ],
  "files": ["src/index.ts"],
  "ts-node": {
    // these options are overrides used only by ts-node
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "composite": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "mocha"],
    "allowJs": true,
    "checkJs": false,
    // strict
    "strict": false,
    "noImplicitAny": false
  }
}